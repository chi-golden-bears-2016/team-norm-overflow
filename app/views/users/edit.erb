<h1>Edit User Details</h1>

<form method="POST" action="/users/<%= current_user.id %>">
  <input type="hidden" name="_method" value="PUT">
  <label for="user[first_name]">First Name</label>
  <input type="text" name="user[first_name]" value="<%= current_user.first_name %>"><br>
  <label for="user[last_name]">Last Name</label>
  <input type="text" name="user[last_name]" value="<%= current_user.last_name %>"><br>
  <label for="user[email]">Email</label>
  <input type="text" name="user[email]" value="<%= current_user.email %>"><br>
  <input type="submit">
</form>
